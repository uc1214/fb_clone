<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>コメントを編集する</h2>
    <%= form_for(@comment, url: topic_comment_path) do |f| %>
      <%= f.error_messages! %>
      <%= f.hidden_field :topic_id %>
      <div class="field">
        <%= f.text_field :content, placeholder: "#{@comment.content}", class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
    <%= link_to "コメント一覧画面にもどる", topic_path(@topic) %>
  </div>
</div>
