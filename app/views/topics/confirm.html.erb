<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で送信する</h3>

    <%= form_for(@topic) do |f| %>
     <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
     <%= f.hidden_field :title %>
     <%= f.hidden_field :content %>
     <%= f.hidden_field :topic_img %>
     <%= f.hidden_field :topic_img_cache %>

     <!-- @topic.titleと@topic.contentとすることで、表示用の値を画面に出力しています。 -->
     <p>タイトル：<%= @topic.title %></p>
     <p>本文：<%= @topic.content %></p>
     <p>写真</p>
     <p><%= image_tag(@topic.topic_img, :class => "img") %></p>
     <%= f.submit "登録する", class: 'btn btn-primary btn-block'%>

    <% end %>

    <%= form_for(@topic, url: new_topic_path, method: 'get') do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :topic_img %>
      <%= f.hidden_field :topic_img_cache %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>
