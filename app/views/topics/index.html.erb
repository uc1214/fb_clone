<div class="container">
  <div class="wrapper col-md-8 col-offset-2 col-sm-10 col-lg-8">
    <p><%= notice %></p>
    <h1>投稿一覧</h1>
    <%= link_to "トピックを投稿する", new_topic_path, class: 'btn btn-default' %>
    <% @topics.each do |topic| %>
    <div class="row">
      <div>
        <div class="col-xs-3 col-sm-2 col-md-2 col-lg-2 img">
          <%= profile_img(topic.user) if profile_img(topic.user) %>
        </div>
        <div class="col-xs-8 col-sm-7 col-md-5 col-lg-5">
          <%= link_to relationship_path(topic.user) do %>
            <%= topic.user.name %>
          <% end %>が投稿しました。
        </div>
      </div>
      <div class="clear field-topics-content">
        <%= link_to topic_path(topic) do %>
          <h4><strong><%= topic.title %></strong></h4>
        <% end %>
        <p><%= topic.content %></p>
        <%= link_to "", edit_topic_path(topic.id), class: "fa fa-pencil-square-o fa-lg" %>
        <%= link_to "", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: "fa fa-trash-o fa-lg" %>
      </div>
    </div>
    <% end %>
  </div>
  <div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id ="move-page-top">▲</a></p>
  </div>
</div>
